{{#if blogs.length}}
  <section>
    <h2>Your Blogs</h2>
    <ol>
      {{#each blogs as |blog|}}
        <ul>
          <article class="blog">
            <div class="title">
              <a href="/blog/{{id}}">{{title}}</a>
            </div>
            <div class="meta">
              <strong>Posted by
                {{user.name}}
                on
                {{format_date date_created}}</strong>
            </div>
          </article>
          <a href="/dashboard/editblog/{{blog.id}}" class="edit-link">Edit Blog</a>
        </ul>
      {{/each}}
    </ol>
  </section>
{{/if}}

<div>
  <button type="submit"><a href="/dashboard/add-blog" class="create-btn">Create
      New Blog</a></button>
</div>